<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context=".WelcomeScreen">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context=".WelcomeScreen"
        android:background="#000">
    <!--    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/bg"
            android:scaleType="centerCrop"/>
        --><ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha="0.0"
            android:background="@android:drawable/dialog_holo_light_frame"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/iitp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presents"
                android:textColor="#EFFF"
                android:textSize="30dp"/>

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:scaleType="fitCenter"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:id="@+id/logo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/rl_welcome_screenback">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fest_name"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"

                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#DFFF"
                android:id="@+id/tv_anwesha_text" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fest_desc"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/themeColorDark"
                android:alpha="0.7"
                android:id="@+id/tv_anwesha_desc"
                android:layout_below="@+id/tv_anwesha_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />
        </RelativeLayout>

           </LinearLayout>

    </RelativeLayout>


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true">


        <android.support.design.widget.FloatingActionButton android:id="@+id/proceed"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal" android:layout_margin="@dimen/fab_margin"
            android:src="@android:drawable/ic_media_next"
            android:visibility="gone"/>
    </FrameLayout>

</FrameLayout>
