<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.ac.iitp.anwesha.EventDetails"
    tools:showIn="@layout/activity_event_details">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.iitp.anwesha.app.EventDetails">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="1dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/event_details_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Event Name"

                    android:textColor="#000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/event_details_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Sub Title"

                    android:textColor="#333"
                    android:textSize="18sp" />

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    card_view:cardCornerRadius="4dp">

                    <TextView
                        android:id="@+id/event_details_story"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFF"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Here is some Event Sample Description, This discription is a very long story and its really silly to write such a ling sentance....\nIt Can be Multiline too\n\nYou Can Add whatever you want :)"
                        android:textColor="#333"
                        android:textSize="15sp" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:visibility="gone">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    card_view:cardCornerRadius="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rules &amp; Regulations"
                        android:textColor="#222"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/event_details_rules"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="30dp"
                        android:paddingTop="20dp"
                        android:text="Some Rule 1\nSome Rule 2\nSome Rule 3"

                        android:textSize="15sp" />

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"

                android:visibility="gone">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    card_view:cardCornerRadius="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oraganisers"
                        android:textColor="#222"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/event_details_organisers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="30dp"
                        android:paddingTop="20dp"
                        android:text="> Organiser 1\n> Organiser 2\n> Organiser 3"

                        android:textSize="15sp" />
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="1dp"
                android:paddingTop="1dp">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    card_view:cardCornerRadius="4dp">

                    <TextView
                        android:id="@+id/event_details_schNvenue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Day 1, 1000 to 1300\nIn Front of Tutorial Block"
                        android:textColor="#000"

                        android:textSize="15sp" />
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
